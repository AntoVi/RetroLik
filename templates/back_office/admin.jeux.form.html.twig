{% extends "base.admin.html.twig" %}


{% block title %}
    {% if editMode %}
        Modification jeu
    
    {% else %}
        Nouveau jeu 
     {% endif %}
{% endblock %}

{% block body %}

    <h1 class="text-center my-5">
    {# Si la variable editMode retourne TRUE, cela veut dire que la catégorie possède un ID, alors c une modif #}
    {% if editMode %}
        Modification jeu
    
    {% else %}
        {# Sinon la catégorie ne possède pas d'ID, c une insertion #}
        Nouveau jeu
     {% endif %}
     </h1>

    {{ form_start(formJeu, {'attr': {'class' : 'col-6 mx-auto' }}) }}

        {{ form_row(formJeu.titre) }}

         {{ form_row(formJeu.description) }}

         {{ form_row(formJeu.Img) }}
        {# Si photoActuelle retourne TRUE, cela veut dire que l'article possède une photo, c'est une
        modification, alors on entre dans la condition IF et on affiche la photo actuelle de l'article #}
        {% if photoActuelle %}   
            
                <em> Vous pouvez uploader une nouvelle photo si vous souhaitez la modifier </em>
            <p class="col-2">
                <img src="{{ asset('uploads/photos/' ~ photoActuelle) }}" alt="" class"col-12 img-responsive">
            </p>
       
        {% endif %}

        {{ form_row(formJeu.Category) }}

        

        <button class="btn btn-dark">
        
            {% if editMode %}
                Modifier
            
            {% else %}
                Enregistrer
            {% endif %}

         </button>

    {{ form_end(formJeu) }}

{% endblock %}