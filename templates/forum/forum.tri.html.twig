{% extends "forum/forum.html.twig" %}

{% block title %}
    Retrolik | Forum
{% endblock %}

{% block body %}
    
<div class="container mx-auto mt-5">
    <table id="table_tri_forum" class="table table_forum text-center">
        <tr>
            {% for data in tableHead %}
                {% if data != 'id' %}
                    <th class="border-0 titreArticleForum"> {{ data|capitalize }} 
                {% endif %}
        
            {% endfor %}
        </tr>
        {% for art in article %}
            <tr class = "text-white">
                <td><a class ="text-white" href = " {{ path('forum_show', {'id':art.id}) }} "> {{art.titre}} </a></td>
                 <td> {{ art.contenu }} </td>
                 <td> {{ art.auteur }} </td>
                 <td> {{ art.date|date('d/m/Y') }} </td>
            </tr>
            
        {% endfor %}
    </table>
</div>

